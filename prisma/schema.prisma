datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id Int @default(autoincrement()) @id
    email String @unique
    password String
    count Int @default(0)
    books Book[]
}

model Book {
  id Int @default(autoincrement()) @id
  title String
  isbn String?
  publishYear Int?
  edition Int @default(1)
  filename String?
  owner User @relation(fields: [ownerId], references: [id])
  ownerId Int
  authors Author[]
}

model Author {
  id Int @default(autoincrement()) @id
  name String @unique
  books Book[]
}